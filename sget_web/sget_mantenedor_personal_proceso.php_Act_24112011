function Validar(Option)
{
var f = document.frmPrincipal;
var Pasaporte;
var Validado=true;
		if(f.TxtRut.value == '')
		{
			alert("Debe Ingresar Rut");
			f.TxtRut.focus();
			Validado=false;
			return;
		}
		Pasaporte ='N';
		if(f.pasaporte.checked==true)
		{
			Pasaporte='S';//Pasaporte
			//alert (Pasaporte);
			
		}	
		else
		{
			valor= new Object(document.frmPrincipal.TxtRut.value);
			foco = new Object(document.frmPrincipal.TxtRut.focus());
			//alert (document.frmPrincipal.TxtRut.value,'Rut Persona', foco, valor);
			var bandera = Rut(document.frmPrincipal.TxtRut.value,'Rut Persona', foco, valor);
			if(bandera == false)
			{
				Validado=false;
				return;
			}
		}	
		if(f.TxtNom.value == '')
		{
			alert("Debe Ingresar Nombre");
			f.TxtNom.focus();
			Validado=false;
			return;
		}
		if(f.TxtPat.value == '')
		{
			alert("Debe Ingresar Apellido Paterno");
			f.TxtPat.focus();
			Validado=false;
			return;
		}
		if(f.TxtMat.value == '')
		{
			alert("Debe Ingresar Apellido Materno");
			f.TxtMat.focus();
			Validado=false;
			return;
		}
		if(f.TxtFechaNac.value=='')
		{
			alert("Debe Fecha Ingresar de Nacimiento");
			f.TxtFechaNac.focus();
			Validado=false;
			return;			
		}
		
		/*if(f.CmbAfp.value=='S')
		{
			alert("Debe Seleccionar AFP");
			f.CmbAfp.focus();
			Validado=false;
			return;
		}
		if(f.CmbSalud.value=='-1')
		{
			alert("Debe Seleccionar Sistema Salud");
			f.CmbSalud.focus();
			Validado=false;
			return;
		}*/
		
		/*if(f.CmbEscolaridad.value=='-1')
		{
			Resp=confirm("Sin Escolaridad, Desea Seleccionar Escolaridad");
			if (Resp==true)
			{
				f.CmbEscolaridad.focus();
				Validado=false;
				return;
			}
		}*/

		
		
		if(f.CmbEscolaridad.value=='-1' && Option !='M')
		{
			alert("Sin Escolaridad Debe Seleccionar Escolaridad");
			f.CmbEscolaridad.focus();
			Validado=false;
			return;
		}


		if(f.CmbRegion.value=='S')
		{
			alert("Debe Seleccionar Region");
			f.CmbRegion.focus();
			Validado=false;
			return;
		}
		if(f.CmbCiudad.value=='S')
		{
			alert("Debe Seleccionar Ciudad");
			f.CmbCiudad.focus();
			Validado=false;
			return;
		}
		/*if(f.CmbComunas.value=='S')
		{
			alert("Debe Seleccionar Comunas");
			f.CmbComunas.focus();
			Validado=false;
			return;
		}*/
		
		if(f.TxtDir.value=='')
		{
			alert("Debe Ingresar Direcion");
			f.TxtDir.focus();
			Validado=false;
			return;
		}
		
		if(f.TxtFecIniCtto.value=='')
		{
			alert("Debe Ingresar Fecha Inicio Contrato");
			f.TxtFecIniCtto.focus();
			Validado=false;
			return;			
		}
		if(f.TxtFecFinCtto.value=='')
		{
			alert("Debe Ingresar Fecha Termino Contrato");
			f.TxtFecIniCtto.focus();
			Validado=false;
			return;			
		}			
		
		if(f.CmbEmpresa.value=='S')
		{
			alert("Debe Seleccionar Empresa");
			f.CmbEmpresa.focus();
			Validado=false;
			return;
		}
		if(f.CmbContrato.value=='S')
		{
			alert("Debe Seleccionar Contrato");
			f.CmbContrato.focus();
			Validado=false;
			return;
		}
		if(f.CmbTipoPersona.value=='S')
		{
			alert("Debe Seleccionar Tipo Persona");
			f.CmbTipoPersona.focus();
			Validado=false;
			return;
		}
		if(f.CmbSindicato.value=='S')
		{
			alert("Debe Seleccionar Sindicato");
			f.CmbSindicato.focus();
			Validado=false;
			return;
		}
		TxtObs = f.TxtObs;
		CmbEscolaridad= f.CmbEscolaridad;
		return(Validado);
}

function Procesos(TipoProceso)
{
	var f = document.frmPrincipal;
	var Agrupados='N';
	var Est='';
	var Cert='';
	var Sexo='';
	var Beca='';
	var Pasaporte='';
	var TxtObs='';
	var CmbEscolaridad = '';
	var TxtNumeroCert;
				
	//alert(TipoProceso);
	switch(TipoProceso)
	{
		case 'G'://GRABAR PERSONA

			if(f.OptCert[0].checked==true)
				Cert='S';//AUTORIZADO
			else
				Cert='N';//NO AUTORIZADO
			if(f.OptEst[0].checked==true)
				Est='A';//ACTIVO
			if(f.OptEst[1].checked==true)
				Est='I';//INACTIVO
			if(f.OptEst[2].checked==true)
				Est='D';//INACTIVO DEFINITIVO
				
			if(f.OptSexo[0].checked==true)
				Sexo='M';//MASCULINO
			else
				Sexo='F';//FEMENINO
			if (f.pasaporte.checked==true)
				Pasaporte = 'S';
				
			var Valida=Validar('N')
			
			if(Valida==true)
			{
				//alert (f.Proceso.value);
				if(f.Proceso.value=='AN')
					f.action='sget_hoja_ruta01.php?Proceso=AN&Est='+Est+'&CertAnt='+Cert+'&Sexo='+Sexo+'&Beca='+Beca+'&CmbEmpresaO='+f.CmbEmpresaO.value+'&CmbContratoO='+f.CmbContratoO.value;
				else
					f.action='sget_mantenedor_personal_proceso01.php?Proc=G&Est='+Est+'&CertAnt='+Cert+'&Sexo='+Sexo+'&Beca='+Beca+'&Pasaporte='+Pasaporte+'&TxtNumeroCert='+TxtNumeroCert;
				f.submit();
			}
			break;
		case "M": //Modificar registros
			var Resp ="";
			var pp = '';
		
			if(f.pasaporte.checked==true)
				Pasaporte='S';//Pasaporte
			else
				Pasaporte='N';//Pasaporte
			if(f.OptCert[0].checked==true)
				CertAnt='S';//CON CERT.ANT
			else
				CertAnt='N';//SIN CERT.ANT
			if(f.OptEst[0].checked==true)
				Est='A';//ACTIVO
			if(f.OptEst[1].checked==true)
				Est='I';//INACTIVO
			if(f.OptEst[2].checked==true)
				Est='D';//INACTIVO DEFINITIVO
				 
			if(f.OptSexo[0].checked==true)
				Sexo='M';//MASCULINO
			else
				Sexo='F';//FEMENINO
			if(f.OptBeca[0].checked==true)
				Beca='S';//MASCULINO
			else
				Beca='N';//FEMENINO
			var Valida=Validar('M')
			if(Valida==true)
			{
		/*	alert (f.TxtHoja.value);*/
			//alert (f.TxtNumeroCert.value);
				if(f.TxtHoja.value!='')
				{
					f.action='sget_hoja_ruta01.php?Proceso=M&Est='+Est+'&CertAnt='+CertAnt+'&Sexo='+Sexo+'&Beca='+Beca+'&CmbEmpresaO='+f.CmbEmpresaO.value+'&CmbContratoO='+f.CmbContratoO.value +'&TxtNumeroCert='+TxtNumeroCert;
				}
				else
				{
				//alert (Est);
			//	alert(f.TxtNumeroCert.value);

					f.action='sget_mantenedor_personal_proceso01.php?Proc=M&Est='+Est+'&CertAnt='+CertAnt+'&Sexo='+Sexo+'&Beca='+Beca+'&Pasaporte='+Pasaporte+'&TxtObs='+TxtObs+'&CmbEscolaridad='+CmbEscolaridad+'&TxtNumeroCert='+TxtNumeroCert;
				}
				f.submit();

										
			}
			break;	
		case "T": //Modificar registros
			confirm('Esta Seguro de Traspasar Persona a Codelco')
			{
				f.action='sget_mantenedor_personal_proceso01.php?Proc=T';
				f.submit();
			}
			break;				
		case 'S'://SALIR
			window.close();
			break;
		case 'R'://RECARGA
			var Est1='';
			var Est2='';
			var Est3='';
			var Cert1='';
			var Cert2='';
			var SexoM='';
			var SexoF='';
			var Pasaporte = '';
			var pp='';
			
		/*	if(f.checkbox.checked==true)
				f.chekbox='checked';*/

			if(f.pasaporte.checked==true)
				pp='checked'; //Pasaporte
	//	alert (pp);		
		//	alert (checkbox);	
			if(f.OptCert[0].checked==true)
				Cert1='checked';
			else	
				Cert2='checked';
			if(f.OptEst[0].checked==true)
				Est1='checked';
			if(f.OptEst[1].checked==true)				
				Est2='checked';
			if(f.OptEst[2].checked==true)				
				Est3='checked';
				
			if(f.OptSexo[0].checked==true)
				SexoM='checked';//MASCULINO
			else
				SexoF='checked';//FEMENINO
				
//alert (SexoF);
//alert (f.TxtRuta.value);
			f.action='sget_mantenedor_personal_proceso.php?Recarga=S&Estado1='+Est1+'&Estado2='+Est2+'&Estado3='+Est3+'&OptSexoEstM='+SexoM+'&OptSexoEstF='+SexoF+'&Optpasaporte='+pp+'&TxtNumeroCert='+TxtNumeroCert;
			f.submit();
			break;
			
		case "Emp":	
			var	URL = "sget_mantenedor_empresas_proceso.php?Volver=S&RutReq="+f.CmbEmpresa.value+"&Form="+f.name+"&Pagina=sget_mantenedor_personal_proceso.php";		//var	URL = "sget_ingreso_administradores.php?Opc=B";
			window.open(URL,"","top=30,left=30,width=800,height=500,menubar=no,status=1,resizable=yes,scrollbars=yes");
		break;	
		case "Contrato":	
			var	URL = "sget_mantenedor_contratos_proceso.php?Volver=S&Contrato="+f.CmbContrato.value+"&Form="+f.name+"&Pagina=sget_mantenedor_personal_proceso.php";		//var	URL = "sget_ingreso_administradores.php?Opc=B";
			window.open(URL,"","top=30,left=30,width=800,height=500,menubar=no,status=1,resizable=yes,scrollbars=yes");
		break;	
	}
}
function BuscarEmp()
{
	var f = document.frmPrincipal;  
	
	var Est1='';
	var Est2='';
	var Est3='';
	var CertAnt1='';
	var CertAnt2='';
	//alert(f.OptEst[0].checked);
	if(f.OptCert[0].checked==true)
		CertAnt1='checked';//CON CERT.ANT
	else
		CertAnt2='checked';//SIN CERT.ANT
	if(f.OptEst[0].checked==true)
		Est1='checked';
	if(f.OptEst[1].checked==true)
		Est2='checked';
	if(f.OptEst[2].checked==true)
		Est3='checked';
		//	alert("Entro");
	f.action='sget_mantenedor_personal_proceso.php?BuscarEmp=S&Estado1='+Est1+'&Estado2='+Est2+'&Estado3='+Est3+'&CertAnt='+CertAnt1+'&CertAnt2='+CertAnt2;
	f.submit();
}
function ActivarDiv(Opt)
{
	if(Opt=='S')
		DivBecados.style.visibility='';
	else
		DivBecados.style.visibility='hidden';
}
function ActivarEst(Op)
{
	var f = document.frmPrincipal;
	//alert (Op);
	var Est3='';				
	if (Op== 'D')
	{
		Resp=confirm('Esta Seguro de Desactivar Persona Definitivamente ');
		
		if (Resp==true)
		{
			Est = 'D';
		}	
		else
		{
			f.OptEst[0].checked ='checked';
			//Est3='checked';
			//alert (Est3);
			
		}		
	}		
		
	if (Op== 'I')
	{
		Resp=confirm('Esta Seguro de Desactivar Persona ');
		if (Resp==true)
		{
			Est = 'I';
		}
		else
		{
			f.OptEst[0].checked ='checked';
			//Est3='checked';
			//alert (Est2);
			//alert (f.OptEst[0].value);
		}		

		
	}		
	if (Op== 'A')
	{
		Resp=confirm('Esta Seguro de Activar Persona ');
		if (Resp==true)
		{
			Est = 'A';
		}
	}		

		
					/*		Resp=confirm('Esta Seguro de Desactivar Definitivamente Persona Activada y/o Modificar');
							if (Resp==true)
							{
								Est = 'D';
								f.action='sget_mantenedor_personal_proceso01.php?Proc=M&Est='+Est+'&CertAnt='+CertAnt+'&Sexo='+Sexo+'&Beca='+Beca+'&Pasaporte='+Pasaporte+'&TxtObs='+TxtObs+'&CmbEscolaridad='+CmbEscolaridad;
								f.submit();
							}
					}
					else if (Est== 'A' && f.OptEst[0].checked==true)
					{
							Resp=confirm('Esta Seguro de Activar Persona Desactivada Definitivamente ');
							if (Resp==true)
							{
								Est = 'A';
								f.action='sget_mantenedor_personal_proceso01.php?Proc=M&Est='+Est+'&CertAnt='+CertAnt+'&Sexo='+Sexo+'&Beca='+Beca+'&Pasaporte='+Pasaporte+'&TxtObs='+TxtObs+'&CmbEscolaridad='+CmbEscolaridad;
								f.submit();
							}
					}		
