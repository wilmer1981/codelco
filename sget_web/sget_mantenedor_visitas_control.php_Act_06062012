{
	if (Msj=='ME')
		alert('Hora entrada de visita ingresada con �xito');
	if (Msj=='MS')
		alert('Hora salida de visita ingresada con �xito');
	if (Msj=='MO')
		alert('Observaci�n ingresada con �xito');
}

