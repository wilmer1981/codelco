						if($Fila["hora_entrada"]=='00:00:00'&&$Fila["hora_salida"]=='00:00:00')
							$Color='bgcolor="#FFFFFF"';		
/*						
list($YVis,$MVis,$DVis)=explode('/',$Fila['fecha_ingreso']);
						list($HVis,$MinVis)=explode(':',$Fila['hora_entrada']);

