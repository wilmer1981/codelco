			$Datos=explode('//',$Valor);
			foreach($Datos as $c => $v)
			{
				$Eliminar="delete from sget_visitas where corr_visita='".$v."'";
				mysql_query($Eliminar);
			}
			header('location:sget_mantenedor_visitas.php?Msj=E&Cons=S');
