	case "GHE"://GRABA LA ENTRADA DE LA VISITA.
			$Dato=explode('//',$Datos);
			while(list($c,$Datos)=each($Dato))
			{
				$Corr=explode('~',$Datos);
				$Actualiza="UPDATE sget_visitas set hora_entrada='".$Hora.":".$Minutos.":00',patente='".$TxtPatente."' where corr_visita='".$Corr[0]."'";
				//echo $Actualiza."<br>";
