function EnvioCorreoFechasVenc($FechaSistema)
{
	
	
	$Meses = array("Enero","Febrero","Marzo","Abril","Mayo","Junio","Julio","Agosto","Septiembre","Octubre","Noviembre","Diciembre");
	$ConsultaCorreo="SELECT * from proyecto_modernizacion.sub_clase where cod_clase='30022' and cod_subclase='1'";
	$RespCorreo=mysql_query($ConsultaCorreo);
	if($Fila=mysql_fetch_array($RespCorreo))
	{
		$Correos=$Fila["nombre_subclase"];
		$ArrayCorreos=explode(",",$Correos);
	}
	$AnoProx=explode('-',date("Y-m-",mktime(0,0,0,date('m'),date('d'),date('Y')+1)));
	$AnoProx2=explode('-',$AnoProx,mktime(0,0,0,date('m')-1,date('d'),date('Y')));
	
	$M=date('m');
	if($M==11)
		$M=0;
		
	$MesMas=date('m')+1;	
	$FSistema=date('Y')."-".$MesMas."-".date('d');	
	//$Correos='lfara@codelco.cl,lcast036@contratistas.codelco.cl';
	$ArrayCorreos=explode(",",$Correos);
	$FMsAsun=explode('-',$FechaSistema);
	$FMsAsun=$FMsAsun[1];
	$Asunto='Vencimiento de documentaci�n y/o examenes para ingreso a Divisi�n Ventanas.';
	$Msj='Se�ores: Las siguientes personas <font color="#FF0000">con fechas en rojo</font> se encuentran con algunos de los siguientes documentos: Charla DAS Codelco; Examen Preocupacional; Examen Psico-senso-t�cnico o licencia de conducir pr�ximo a vencer en el mes de '.$Meses[intval($FMsAsun)].'.<br>En caso de no regularizar documentaci�n de trabajadores se bloquear� pase de ingreso a la Divisi�n.<br><br>';
	$Mensaje='<table width="90%"  border="1" align="center">';
	$Mensaje.='<tr><td align="left" colspan="9"><font size="2">'.$Msj.'</font></td></tr>';
	$Mensaje.='<tr style="background-color:#4679AC; color:#FFFFFF;"><td align="center">Rut&nbsp;Persona</td><td align="center">Nombre</td><td  align="center">Empresa</td><td align="center">Contrato</td><td align="center">Fecha DAS Codelco</td><td align="center">Fecha Examen Preocupacional</td><td align="center">Fecha Examen Ocupacional</td><td align="center">Fecha Psico-senso-t�cnico</td><td align="center">Fecha Vig. Licencia Municipal</td></tr>';

	$Consulta="SELECT * from sget_personal where";
	$Consulta.=" rut<>'' and fec_fin_ctto > '".date('Y-m-d')."' and estado='A' and ";
	$Consulta.=" (DATE_ADD(fecha_das,INTERVAL 1 YEAR)<='".$FSistema."' or fecha_vigencia_exa_preo<='".$FSistema."') and fecha_das<>'0000-00-00' and fecha_vigencia_exa_preo<>'0000-00-00'";
	//echo $Consulta."<br>";
	$RespFecVen=mysql_query($Consulta);
	if($FilaFecVen=mysql_fetch_array($RespFecVen))
	{
	
		$Pasa2='S';
		$Consulta="SELECT t1.*,t2.fecha_exa_pst,t2.corr_conductor,t2.fecha_vig_licencia from sget_personal t1 left join sget_conductores t2 on t1.rut=t2.rut where";
		$Consulta.=" t1.rut<>'' and t1.fec_fin_ctto > '".date('Y-m-d')."' and t1.estado='A' and ";
		$Consulta.=" (DATE_ADD(t1.fecha_das,INTERVAL 1 YEAR)<='".$FSistema."' or t1.fecha_vigencia_exa_preo<='".$FSistema."') and t1.fecha_das<>'0000-00-00' and t1.fecha_vigencia_exa_preo<>'0000-00-00'";
		//echo $Consulta."<br>";
		$RespFecVen=mysql_query($Consulta);$ContratosEnvio='';
		while($FilaFecVen=mysql_fetch_array($RespFecVen))
		{
			$Lic="SELECT tipo_licencia from sget_conductores_licencias where corr_conductor='".$FilaFecVen[corr_conductor]."'";
			//echo $Lic."<br>"; 
			$RLic=mysql_query($Lic);$Licencias='';
			while($FLic=mysql_fetch_array($RLic))
			{
				if($FLic[tipo_licencia]!='')
					$Licencias=$Licencias.$FLic[tipo_licencia].", ";
			}		
			if($Licencias !='')
					$Licencias=substr($Licencias,0,strlen($Licencias)-2);							

			
			$ContratosEnvio=$ContratosEnvio.$FilaFecVen["cod_contrato"]."~";
			
			$CEMP="SELECT * from sget_contratistas where rut_empresa='".$FilaFecVen[rut_empresa]."'";
			$REMP=mysql_query($CEMP);
			$FEMP=mysql_fetch_array($REMP);
			$NomEmp=$FEMP[razon_social];
			$CCtto="SELECT * from sget_contratos where cod_contrato='".$FilaFecVen["cod_contrato"]."'";
			$RCCtto=mysql_query($CCtto);
			$FCCtto=mysql_fetch_array($RCCtto);
			$NomCCtto=$FCCtto["descripcion"];
			
			$FDAS=explode('-',$FilaFecVen[fecha_das]);
			$Ano=$FDAS[0]+1;
			if($Ano."-".$FDAS[1]."-".$FDAS[2]<=$FSistema)
				$FechaDAS='<font color="#FF0000">'.$Ano."-".$FDAS[1]."-".$FDAS[2].'</font>';
			else
				$FechaDAS=$Ano."-".$FDAS[1]."-".$FDAS[2];	
			
			if($FilaFecVen[fecha_vigencia_exa_preo]<=$FSistema)
				$FechaExpi='<font color="#FF0000">'.$FilaFecVen[fecha_vigencia_exa_preo].'</font>';
			else
				$FechaExpi=$FilaFecVen[fecha_vigencia_exa_preo];
			if($FilaFecVen[fecha_exa_pst]<=$FSistema)
				$FechaPST='<font color="#FF0000">'.$FilaFecVen[fecha_exa_pst].'</font>';
			else
				$FechaPST=$FilaFecVen[fecha_exa_pst];	
			if($FilaFecVen[fecha_vig_licencia]<=$FSistema)
				$FechaLicencia='<font color="#FF0000">'.$FilaFecVen[fecha_vig_licencia].'</font>';
			else
				$FechaLicencia=$FilaFecVen[fecha_vig_licencia];	
			if($FilaFecVen[fecha_vig_exa_ocup]=='' && $FilaFecVen[fecha_vig_exa_ocup]=='0000-00-00')	
			{
				$FechaOcupa=explode('-',$FilaFecVen[fecha_exa_ocup]);
				if($FechaOcupa[0]!='' & $FechaOcupa[0]!='0000')
				{
					$FechaOcupa[0]=$FechaOcupa[0]+$OcupaAno;
					$FechaOcupaExpi=$FechaOcupa[0]."-".$FechaOcupa[1]."-".$FechaOcupa[2];
				}
				else
					$FechaOcupaExpi='';
			}
			else
				$FechaOcupaExpi=$FilaFecVen[fecha_vig_exa_ocup];
			if($FechaOcupaExpi< date('Y-m-d'))	
				$FechaOcupaExpi="<span class='InputRojo'>".$FechaOcupaExpi."</span>";
			else
				$FechaOcupaExpi=$FechaOcupaExpi;	
				
				
			$Mensaje.='<tr bgcolor="#F8DF9D" style="font-size:12px; color:#000000;"><td>'.$FilaFecVen["rut"].'&nbsp;</td><td>'.ucwords(strtolower($FilaFecVen[ape_paterno]." ".$FilaFecVen[ape_materno]." ".$FilaFecVen["nombres"])).'&nbsp;</td><td>'.ucwords(strtolower($FilaFecVen[rut_empresa]." - ".$NomEmp)).'&nbsp;</td><td>'.ucwords(strtolower($FilaFecVen["cod_contrato"]." - ".$NomCCtto)).'&nbsp;</td><td align="center">'.$FechaDAS.'&nbsp;</td><td align="center">'.$FechaExpi.'&nbsp;</td><td align="center">'.$FechaOcupaExpi.'&nbsp;</td><td align="center">'.$FechaPST.'&nbsp;</td><td align="center">'.$FechaLicencia.'&nbsp;</td></tr>';
		}
		$Mensaje.='</table>';
		//echo $Mensaje;
		foreach($ArrayCorreos as $C =>$Correo2)	
		{
			ClassEnvio($Correo2,$Asunto,$Mensaje,'');	
		}	
	}
}
function EnvioCorreoFechasVenc2($FechaSistema)
{
	$Meses = array("Enero","Febrero","Marzo","Abril","Mayo","Junio","Julio","Agosto","Septiembre","Octubre","Noviembre","Diciembre");
	$ConsultaCorreo="SELECT * from proyecto_modernizacion.sub_clase where cod_clase='30022' and cod_subclase='1'";
	$RespCorreo=mysql_query($ConsultaCorreo);
	if($Fila=mysql_fetch_array($RespCorreo))
	{
		$Correos=$Fila["nombre_subclase"];
		$ArrayCorreos=explode(",",$Correos);
	}
	$AnoProx=explode('-',date("Y-m-",mktime(0,0,0,date('m'),date('d'),date('Y')+1)));
	$AnoProx2=explode('-',$AnoProx,mktime(0,0,0,date('m')-1,date('d'),date('Y')));
	
	$M=date('m');
	if($M==11)
		$M=0;
		
	$MesMas=date('m')+1;	
	$FSistema=date('Y')."-".$MesMas."-".date('d');	
	//$Correos='lfara@codelco.cl,lcast036@contratistas.codelco.cl';
	$ArrayCorreos=explode(",",$Correos);
	$FMsAsun=explode('-',$FechaSistema);
	$FMsAsun=$FMsAsun[1];

	$Consulta="SELECT * from sget_personal where";
	$Consulta.=" rut<>'' and fec_fin_ctto > '".date('Y-m-d')."' and estado='A' and ";
	$Consulta.=" (DATE_ADD(fecha_das,INTERVAL 1 YEAR)<='".$FSistema."' or fecha_vigencia_exa_preo<='".$FSistema."') and fecha_das<>'0000-00-00' and fecha_vigencia_exa_preo<>'0000-00-00'";
	//echo $Consulta."<br>";
	$RespFecVen=mysql_query($Consulta);
	if($FilaFecVen=mysql_fetch_array($RespFecVen))
	{
	
		$Pasa2='S';
		$Consulta="SELECT t1.cod_contrato,t1.rut_empresa from sget_personal t1 left join sget_conductores t2 on t1.rut=t2.rut where";
		$Consulta.=" t1.rut<>'' and t1.fec_fin_ctto > '".date('Y-m-d')."' and t1.estado='A' and ";
		$Consulta.=" (DATE_ADD(t1.fecha_das,INTERVAL 1 YEAR)<='".$FSistema."' or t1.fecha_vigencia_exa_preo<='".$FSistema."') and t1.fecha_das<>'0000-00-00' and t1.fecha_vigencia_exa_preo<>'0000-00-00'";
		$Consulta.=" group by t1.cod_contrato";
		$RespFecVen=mysql_query($Consulta);$ContratosEnvio='';$Mensaje2='';
		while($FilaFecVen=mysql_fetch_array($RespFecVen))
		{
			$Consulta="SELECT razon_social from sget_contratistas where rut_empresa='".$FilaFecVen[rut_empresa]."'";
			$RespEmp=mysql_query($Consulta);
			if($FilaEmp=mysql_fetch_assoc($RespEmp))
			{
				$NomEmpresa=substr($FilaEmp[razon_social],0,40);
				$Asunto=ucwords(strtolower($NomEmpresa)).' - Vencimiento de documentaci�n y/o ex�menes.';
			}
			else
				$Asunto='Vencimiento de documentaci�n y/o ex�menes.';
			$Msj='Se�ores: Las siguientes personas <font color="#FF0000">con fechas en rojo</font> se encuentran con algunos de los siguientes documentos: Charla DAS Codelco; Examen Preocupacional; Examen Psico-senso-t�cnico o licencia de conducir pr�ximo a vencer en el mes de '.$Meses[intval($FMsAsun)].'.<br>En caso de no regularizar documentaci�n de trabajadores se bloquear� pase de ingreso a la Divisi�n.<br><br>';
			$Mensaje2='<table width="90%"  border="1" align="center">';
			$Mensaje2.='<tr><td align="left" colspan="9"><font size="2">'.$Msj.'</font></td></tr>';
			$Mensaje2.='<tr style="background-color:#4679AC; color:#FFFFFF;"><td align="center">Rut&nbsp;Persona</td><td align="center">Nombre</td><td  align="center">Empresa</td><td align="center">Contrato</td><td align="center">Fecha DAS Codelco</td><td align="center">Fecha Examen Preocupacional</td><td align="center">Fecha Examen Ocupacional</td><td align="center">Fecha Psico-senso-t�cnico</td><td align="center">Fecha Vig. Licencia Municipal</td></tr>';

			$ConEnvioAdmPre="SELECT *,t2.rut,t2.fecha_das,t2.fecha_vigencia_exa_preo,t3.fecha_vig_licencia,rut_adm_contrato,rut_adm_contratista,rut_prev,corr_conductor,t1.cod_contrato,t1.rut_empresa from sget_contratos t1";
			$ConEnvioAdmPre.=" inner join sget_personal t2 on t1.cod_contrato=t2.cod_contrato left join sget_conductores t3 on t2.rut=t3.rut";
			$ConEnvioAdmPre.=" where t1.cod_contrato='".$FilaFecVen["cod_contrato"]."' and t2.fec_fin_ctto > '".date('Y-m-d')."' and t2.estado='A' and";
			$ConEnvioAdmPre.=" (DATE_ADD(t2.fecha_das,INTERVAL 1 YEAR)<='".$FSistema."' or t2.fecha_vigencia_exa_preo<='".$FSistema."') and t2.fecha_das<>'0000-00-00' and t2.fecha_vigencia_exa_preo<>'0000-00-00'";
			//echo "consulta 2:    ".$ConEnvioAdmPre."<br><br>";
			$REnvioAdmPre=mysql_query($ConEnvioAdmPre);$Mensaje='';
			while($FEnvioAdmPre=mysql_fetch_array($REnvioAdmPre))
			{
					$Lic="SELECT tipo_licencia from sget_conductores_licencias where corr_conductor='".$FEnvioAdmPre[corr_conductor]."'";
					//echo $Lic."<br>"; 
					$RLic=mysql_query($Lic);$Licencias='';
					while($FLic=mysql_fetch_array($RLic))
					{
						if($FLic[tipo_licencia]!='')
							$Licencias=$Licencias.$FLic[tipo_licencia].", ";
					}		
					if($Licencias !='')
							$Licencias=substr($Licencias,0,strlen($Licencias)-2);							
		
					
					$CEMP="SELECT * from sget_contratistas where rut_empresa='".$FEnvioAdmPre[rut_empresa]."'";
					$REMP=mysql_query($CEMP);
					$FEMP=mysql_fetch_array($REMP);
					$NomEmp=$FEMP[razon_social];
					$CCtto="SELECT * from sget_contratos where cod_contrato='".$FEnvioAdmPre["cod_contrato"]."'";
					$RCCtto=mysql_query($CCtto);
					$FCCtto=mysql_fetch_array($RCCtto);
					$NomCCtto=$FCCtto["descripcion"];
					
					$FDAS=explode('-',$FEnvioAdmPre[fecha_das]);
					$Ano=$FDAS[0]+1;
					if($Ano."-".$FDAS[1]."-".$FDAS[2]<=$FSistema)
						$FechaDAS='<font color="#FF0000">'.$Ano."-".$FDAS[1]."-".$FDAS[2].'</font>';
					else
						$FechaDAS=$Ano."-".$FDAS[1]."-".$FDAS[2];	
					
					if($FilaFecVen[fecha_vigencia_exa_preo]<=$FSistema)
						$FechaExpi='<font color="#FF0000">'.$FEnvioAdmPre[fecha_vigencia_exa_preo].'</font>';
					else
						$FechaExpi=$FEnvioAdmPre[fecha_vigencia_exa_preo];
					if($FilaFecVen[fecha_exa_pst]<=$FSistema)
						$FechaPST='<font color="#FF0000">'.$FEnvioAdmPre[fecha_exa_pst].'</font>';
					else
						$FechaPST=$FEnvioAdmPre[fecha_exa_pst];	
					if($FilaFecVen[fecha_vig_licencia]<=$FSistema)
						$FechaLicencia='<font color="#FF0000">'.$FEnvioAdmPre[fecha_vig_licencia].'</font>';
					else
						$FechaLicencia=$FEnvioAdmPre[fecha_vig_licencia];	
					if($FEnvioAdmPre[fecha_vig_exa_ocup]=='' && $FEnvioAdmPre[fecha_vig_exa_ocup]=='0000-00-00')	
					{
						$FechaOcupa=explode('-',$FEnvioAdmPre[fecha_exa_ocup]);
						if($FechaOcupa[0]!='' & $FechaOcupa[0]!='0000')
						{
							$FechaOcupa[0]=$FechaOcupa[0]+$OcupaAno;
							$FechaOcupaExpi=$FechaOcupa[0]."-".$FechaOcupa[1]."-".$FechaOcupa[2];
						}
						else
							$FechaOcupaExpi='';
					}
					else
						$FechaOcupaExpi=$FEnvioAdmPre[fecha_vig_exa_ocup];
					if($FechaOcupaExpi< date('Y-m-d'))	
						$FechaOcupaExpi="<span class='InputRojo'>".$FechaOcupaExpi."</span>";
					else
						$FechaOcupaExpi=$FechaOcupaExpi;	
						
					$Mensaje2.='<tr bgcolor="#F8DF9D" style="font-size:12px; color:#000000;"><td>'.$FEnvioAdmPre["rut"].'&nbsp;</td><td>'.ucwords(strtolower($FEnvioAdmPre[ape_paterno]." ".$FEnvioAdmPre[ape_materno]." ".$FEnvioAdmPre["nombres"])).'&nbsp;</td><td>'.ucwords(strtolower($FEnvioAdmPre[rut_empresa]." - ".$NomEmp)).'&nbsp;</td><td>'.ucwords(strtolower($FEnvioAdmPre["cod_contrato"]." - ".$NomCCtto)).'&nbsp;</td><td align="center">'.$FechaDAS.'&nbsp;</td><td align="center">'.$FechaExpi.'&nbsp;</td><td align="center">'.$FechaOcupaExpi.'&nbsp;</td><td align="center">'.$FechaPST.'&nbsp;</td><td align="center">'.$FechaLicencia.'&nbsp;</td></tr>';
					$RutAdmCodelco=$FEnvioAdmPre[rut_adm_contrato];	
					$RutAdmContra=$FEnvioAdmPre[rut_adm_contratista];	
					$RutPrev=$FEnvioAdmPre[rut_prev];	
			}
			$Mensaje2.='</table>';	
			//echo $Mensaje2."<br>";
			if($RutAdmCodelco!='')//ENVIO CORREO A ADMINISTRADOR DE CONTRATO CODELCO
			{
				$AdmCodelco="SELECT email from sget_administrador_contratos where rut_adm_contrato='".$RutAdmCodelco."'";
				$RAdmCodelco=mysql_query($AdmCodelco);$cuerpoMsj='';
				$FAdmCodelco=mysql_fetch_array($RAdmCodelco);
				if($FAdmCodelco[email]!='')
					ClassEnvio($FAdmCodelco[email],$Asunto,$Mensaje2,'Adm. Codelco');				
			}
			if($RutAdmContra!='')//ENVIO CORREO A ADMINISTRADOR DE CONTRATO CONTRATISTA
			{
				$AdmContra="SELECT email from sget_administrador_contratistas where rut_adm_contratista='".$RutAdmContra."'";
				$RAdmContra=mysql_query($AdmContra);$cuerpoMsj='';
				$FAdmContra=mysql_fetch_array($RAdmContra);
				if($FAdmContra[email]!='')
					ClassEnvio($FAdmContra[email],$Asunto,$Mensaje2,'Adm. Contratista');				
			}
			if($RutPrev!='')//ENVIO CORREO A PREVENCIONISTA
			{
				$Prev="SELECT email_1 from sget_prevencionistas where rut_prev='".$RutPrev."'";
				$RPrev=mysql_query($Prev);$cuerpoMsj='';
				$FPrev=mysql_fetch_array($RPrev);
				if($FPrev[email_1]!='')
					ClassEnvio($FPrev[email_1],$Asunto,$Mensaje2,'Prevencionista');				
			}//IF DE PREVENCIONISTA
		}//CIERRE WHILE AGRUPADO POR CONTRATOS
	}
}
function ClassEnvio($Correo2,$Asunto,$Mensaje2,$Quien)
{
	$Correo2='cvida014@codelco.cl';
	$cuerpoMsj = '<html>';
	$cuerpoMsj.= '<head>';
	$cuerpoMsj.= '<title>'.$Titulo.'</title>';
	$cuerpoMsj.= '</head>';
	$cuerpoMsj.= '<body>';
	$cuerpoMsj.= '<table  width="100%"  border="0" align="center" style="border-top-color:#666666; border-top-style:solid; border-top-width:thin; border-bottom-color:#666666; border-bottom-style:solid; border-bottom-width:thin; border-left-color:#666666; border-left-style:solid; border-left-width:thin; border-right-color:#666666; border-right-style:solid; border-right-width:thin;>';
	$cuerpoMsj.= '<tr><td>';
	$cuerpoMsj.= '<tr><td>';
	$cuerpoMsj.= ''.$Mensaje2.'';
	$cuerpoMsj.= "<br>";
	$cuerpoMsj.=" Favor no responder este mensaje";
	$cuerpoMsj.= "<br>";
	$cuerpoMsj.="Servicio Automatico de Sistema Gesti�n Terceros";
	$cuerpoMsj.= "<br>";
	$cuerpoMsj.= '</td></tr>';
	$cuerpoMsj.= '</table>';
	$cuerpoMsj.= '</body></html>';

	//echo $cuerpoMsj."<br><br>";
	$mail = new phpmailer();
	//$mail->AddEmbeddedImage("includes/logo_seti.jpg","logo","includes/logo_seti.jpg","base64","image/jpg");
	$mail->PluginDir = "includes/";
	//$mail->Mailer = "smtp";
	$mail->Host = "VEFVEX03.codelco.cl";
	//$mail->From = "SGET";
	$mail->FromName = "SGET - Sistema Gesti�n Terceros";
	$mail->Subject = $Asunto;
	$mail->Body=$cuerpoMsj;
	$mail->IsHTML(true);
	$mail->AltBody =str_replace('<br>','\n',$cuerpoMsj);
	$mail->AddAddress($Correo2);
	$mail->Timeout=120;
	//$mail->AddAttachment($Doc,$Doc);
	$exito = $mail->Send();
	$intentos=1; 
	while((!$exito)&&($intentos<5)&&($mail->ErrorInfo!="SMTP Error: Data not accepted"))
	{
	sleep(5);
	$exito = $mail->Send();
	$intentos=$intentos+1;				
	}
	$mail->ClearAddresses();
}
